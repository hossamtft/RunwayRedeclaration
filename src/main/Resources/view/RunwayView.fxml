<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.soton.group2seg.controller.MainController">

<!-- Left panel for airport and runway selection -->
<left>
  <VBox spacing="15" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
    <padding>
      <Insets top="8" right="8" bottom="8" left="8"/>
    </padding>

    <Label text="Airport Options" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

    <VBox spacing="5">
      <Label text="Select Airport"/>
      <HBox spacing="5">
        <ComboBox fx:id="airportListCombo" prefWidth="150"/>
        <Button mnemonicParsing="false" onAction="#handleAirportSelection" text="Load" styleClass="action-button"/>
      </HBox>
    </VBox>

    <!-- Runway selection controls (horizontally arranged) -->
    <HBox spacing="5" alignment="CENTER_LEFT">
      <ComboBox fx:id="runwayListCombo" prefWidth="150" visible="false"/>
      <Button fx:id="runwayLoadButton" mnemonicParsing="false" onAction="#handleRunwaySelection" text="Load" styleClass="action-button" visible="false"/>
    </HBox>

    <Separator/>

    <VBox spacing="10" alignment="CENTER">
      <padding>
        <Insets top="20"/>
      </padding>
      <Button fx:id="addObstButton" mnemonicParsing="false" onAction="#loadObstacleForm"
              prefWidth="180" text="Add Obstacle" styleClass="action-button"/>
      <Button fx:id="addPreDefObstButton" mnemonicParsing="false" onAction="#loadPredefinedObstacleForm"
              prefWidth="180" text="Add Predefined Obstacle" styleClass="action-button"/>
    </VBox>
  </VBox>
</left>

<!-- Center panel for runway visualization -->
<center>
  <VBox>
    <HBox alignment="CENTER" style="-fx-background-color: #eaeaea; -fx-padding: 5;">
      <Label text="Runway Visualization" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    </HBox>
    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
      <StackPane alignment="CENTER">
        <VBox fx:id="runwayContainer" alignment="CENTER"/>
      </StackPane>
    </ScrollPane>
  </VBox>
</center>

<!-- Right panel for details and calculations -->
<right>
  <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15;" prefWidth="340">
    <padding>
      <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Runway Details" style="-fx-font-weight: bold; -fx-font-size: 16px;" alignment="CENTER"/>

    <TitledPane text="Original Values" expanded="true" collapsible="true">
      <TableView fx:id="originalTableView" prefHeight="85" prefWidth="320">
        <columns>
          <TableColumn fx:id="nameCol" prefWidth="64" text="Runway" />
          <TableColumn fx:id="asdaCol" prefWidth="64" text="ASDA" />
          <TableColumn fx:id="toraCol" prefWidth="64" text="TORA" />
          <TableColumn fx:id="todaCol" prefWidth="64" text="TODA" />
          <TableColumn fx:id="ldaCol" prefWidth="64" text="LDA" />
        </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
      </TableView>
    </TitledPane>

    <TitledPane text="Current Values" expanded="true" collapsible="true">
      <TableView fx:id="currentTableView" prefHeight="85" prefWidth="320">
        <columns>
          <TableColumn fx:id="currNameCol" prefWidth="64" text="Runway" />
          <TableColumn fx:id="currAsdaCol" prefWidth="64" text="ASDA" />
          <TableColumn fx:id="currToraCol" prefWidth="64" text="TORA" />
          <TableColumn fx:id="currTodaCol" prefWidth="64" text="TODA" />
          <TableColumn fx:id="currLdaCol" prefWidth="64" text="LDA" />
        </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
      </TableView>
    </TitledPane>

    <HBox alignment="CENTER_RIGHT">
      <Button fx:id="toggleTabPaneButton" text="Show Calculation Breakdown"
              onAction="#toggleTabPaneVisibility" styleClass="info-button"/>
    </HBox>

    <VBox fx:id="tabPaneContainer" visible="false" managed="false" VBox.vgrow="ALWAYS">
      <TabPane prefHeight="200">
        <tabs>
          <Tab text="ASDA" closable="false">
            <content>
              <TextArea fx:id="asdaTextArea" editable="false" wrapText="true"/>
            </content>
          </Tab>
          <Tab text="TORA" closable="false">
            <content>
              <TextArea fx:id="toraTextArea" editable="false" wrapText="true"/>
            </content>
          </Tab>
          <Tab text="TODA" closable="false">
            <content>
              <TextArea fx:id="todaTextArea" editable="false" wrapText="true"/>
            </content>
          </Tab>
          <Tab text="LDA" closable="false">
            <content>
              <TextArea fx:id="ldaTextArea" editable="false" wrapText="true"/>
            </content>
          </Tab>
        </tabs>
      </TabPane>
    </VBox>
  </VBox>
</right>

</BorderPane>