<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.soton.group2seg.controller.MainController">
    <children>
        <SplitPane fx:id="splitPane" dividerPositions="0.165, 0.78" VBox.vgrow="ALWAYS">
            <items>
                <!-- Left Panel: Airport Selection -->
                <VBox prefWidth="100" style="-fx-background-color: #f5f5f5; -fx-padding: 10;" SplitPane.resizableWithParent="true">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                   <children>

                       <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Airport Options">
                           <VBox.margin>
                               <Insets bottom="15" />
                           </VBox.margin>
                       </Label>

                       <VBox spacing="15">
      <children>
                              <VBox spacing="5">
                                 <children>
                                     <Label text="Select Airport" />
                                     <HBox alignment="CENTER_LEFT" spacing="5">
                                        <children>
                                            <ComboBox fx:id="airportListCombo" prefWidth="150" />
                                            <Button mnemonicParsing="false" onAction="#handleAirportSelection" styleClass="action-button" text="Load" />
                                        </children>
                                     </HBox>
                                 </children>
                              </VBox>

                              <VBox spacing="5">
         <children>
                                     <HBox alignment="CENTER_LEFT" spacing="5">
                                        <children>
                                            <ComboBox fx:id="runwayListCombo" prefWidth="150" visible="false" />
                                            <Button fx:id="runwayLoadButton" mnemonicParsing="false" onAction="#handleRunwaySelection" text="Load" visible="false" />
                                        </children>
                                     </HBox>
         </children>
                              </VBox>

                              <Region VBox.vgrow="ALWAYS" />

                              <!-- Obstacle buttons at bottom -->
                              <VBox alignment="BOTTOM_CENTER" spacing="10">
         <children>
                                     <Button fx:id="addObstButton" mnemonicParsing="false" onAction="#loadObstacleForm" prefWidth="180" styleClass="action-button" text="Add Obstacle" />
                                     <Button fx:id="addPreDefObstButton" mnemonicParsing="false" onAction="#loadPredefinedObstacleForm" prefWidth="180" styleClass="action-button" text="Add Predefined Obstacle" />
                                     <Label fx:id="disabledMessageLabel" prefHeight="52.0" prefWidth="165.0" text="Please select an airport and runway before adding an obstacle." wrapText="true" />
         </children>
                              </VBox>
                              <Button fx:id="exportXmlButton" mnemonicParsing="false" onAction="#handleExportAsXml" prefWidth="180" styleClass="action-button" text="Export Airport &amp; Obstacles" />
                        <Button fx:id="about" mnemonicParsing="false" onAction="#About" prefWidth="180" styleClass="action-button" text="About" />
      </children>
                       </VBox>
                   </children>
                </VBox>

                <!-- Center Panel: Runway Visualization -->
                <AnchorPane minHeight="500" minWidth="800" SplitPane.resizableWithParent="true">
   <children>
                       <TabPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <tabs>
                              <Tab closable="false" text="Top Down View">
                                 <content>
                                     <fx:include source="topDownView.fxml" />
                                 </content>
                              </Tab>
                              <Tab closable="false" text="Side on view">
                                 <content>
                                     <fx:include source="sideView.fxml" />
                                 </content>
                              </Tab>
                          </tabs>
                       </TabPane>
   </children>
                </AnchorPane>

                <!-- Right Panel: Details -->
                <VBox alignment="TOP_CENTER" prefWidth="340" style="-fx-background-color: #f5f5f5; -fx-padding: 10;" SplitPane.resizableWithParent="true">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
   <children>

                       <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Runway Details">
                           <VBox.margin>
                               <Insets bottom="10" />
                           </VBox.margin>
                       </Label>

                       <TitledPane collapsible="true" expanded="true" text="Original Values">
      <content>
                              <TableView fx:id="originalTableView" prefHeight="85" prefWidth="320">
                                  <columns>
                                      <TableColumn fx:id="nameCol" prefWidth="64" text="Runway" />
                                      <TableColumn fx:id="asdaCol" prefWidth="64" text="ASDA" />
                                      <TableColumn fx:id="toraCol" prefWidth="64" text="TORA" />
                                      <TableColumn fx:id="todaCol" prefWidth="64" text="TODA" />
                                      <TableColumn fx:id="ldaCol" prefWidth="64" text="LDA" />
                                  </columns>
                                  <columnResizePolicy>
                                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                  </columnResizePolicy>
                              </TableView>
      </content>
                       </TitledPane>

                       <TitledPane collapsible="true" expanded="true" text="Current Values">
      <content>
                              <TableView fx:id="currentTableView" prefHeight="85" prefWidth="320">
                                  <columns>
                                      <TableColumn fx:id="currNameCol" prefWidth="64" text="Runway" />
                                      <TableColumn fx:id="currAsdaCol" prefWidth="64" text="ASDA" />
                                      <TableColumn fx:id="currToraCol" prefWidth="64" text="TORA" />
                                      <TableColumn fx:id="currTodaCol" prefWidth="64" text="TODA" />
                                      <TableColumn fx:id="currLdaCol" prefWidth="64" text="LDA" />
                                  </columns>
                                  <columnResizePolicy>
                                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                  </columnResizePolicy>
                              </TableView>
      </content>
                       </TitledPane>

                       <HBox alignment="CENTER_RIGHT" spacing="10">
                           <VBox.margin>
                               <Insets bottom="5" top="10" />
                           </VBox.margin>
      <children>
                              <Button fx:id="toggleTabPaneButton" onAction="#toggleTabPaneVisibility" styleClass="info-button" text="Show Calculation Breakdown" />
      </children>
                       </HBox>

                       <VBox fx:id="tabPaneContainer" managed="false" visible="false" VBox.vgrow="ALWAYS">
      <children>
                              <TabPane prefHeight="200" prefWidth="320">
                                  <tabs>
                                      <Tab closable="false" text="ASDA">
                                          <content>
                                              <TextArea fx:id="asdaTextArea" editable="false" wrapText="true" />
                                          </content>
                                      </Tab>
                                      <Tab closable="false" text="TORA">
                                          <content>
                                              <TextArea fx:id="toraTextArea" editable="false" wrapText="true" />
                                          </content>
                                      </Tab>
                                      <Tab closable="false" text="TODA">
                                          <content>
                                              <TextArea fx:id="todaTextArea" editable="false" wrapText="true" />
                                          </content>
                                      </Tab>
                                      <Tab closable="false" text="LDA">
                                          <content>
                                              <TextArea fx:id="ldaTextArea" editable="false" wrapText="true" />
                                          </content>
                                      </Tab>
                                  </tabs>
                              </TabPane>
      </children>
                       </VBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="235.0">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                     <children>
                        <Button fx:id="toggleDashboardButton" mnemonicParsing="false" onAction="#openAdminDashboard" text="Admin Dashboard">
                           <HBox.margin>
                              <Insets left="115.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="BOTTOM_LEFT" prefHeight="25.0" prefWidth="235.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label fx:id="currentSessionLabel" text="Signed in as:" wrapText="true" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Arial Rounded MT Bold" size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
   </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>
