<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.soton.group2seg.controller.MainController">
    <children>
        <SplitPane fx:id="splitPane" dividerPositions="0.165, 0.78" VBox.vgrow="ALWAYS" >
            <items>
                <!-- Left Panel: Airport Selection -->
                <VBox prefWidth="100" SplitPane.resizableWithParent="false" style="-fx-background-color: #f5f5f5; -fx-padding: 10;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <Label text="Airport Options" style="-fx-font-weight: bold; -fx-font-size: 16px;">
                        <VBox.margin>
                            <Insets bottom="15"/>
                        </VBox.margin>
                    </Label>

                    <VBox spacing="15">
                        <VBox spacing="5">
                            <Label text="Select Airport"/>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <ComboBox fx:id="airportListCombo" prefWidth="150"/>
                                <Button mnemonicParsing="false" onAction="#handleAirportSelection" text="Load" styleClass="action-button"/>
                            </HBox>
                        </VBox>

                        <VBox spacing="5">
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <ComboBox fx:id="runwayListCombo" prefWidth="150" visible="false"/>
                                <Button fx:id="runwayLoadButton" mnemonicParsing="false" onAction="#handleRunwaySelection" text="Load" visible="false"/>
                            </HBox>
                        </VBox>

                        <Region VBox.vgrow="ALWAYS"/>

                        <!-- Obstacle buttons at bottom -->
                        <VBox spacing="10" alignment="BOTTOM_CENTER">
                            <Button fx:id="addObstButton" mnemonicParsing="false" onAction="#loadObstacleForm"
                                    prefWidth="180" text="Add Obstacle" styleClass="action-button"/>
                            <Button fx:id="addPreDefObstButton" mnemonicParsing="false" onAction="#loadPredefinedObstacleForm"
                                    prefWidth="180" text="Add Predefined Obstacle" styleClass="action-button"/>
                        </VBox>
                    </VBox>
                </VBox>

                <!-- Center Panel: Runway Visualization -->
                <AnchorPane SplitPane.resizableWithParent="true" minWidth="800" minHeight="500">
                    <TabPane AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                        <Tab text="Top Down View" closable="false">
                            <fx:include source="topDownView.fxml" />
                        </Tab>
                        <Tab text="Side on view" closable="false">
                            <fx:include source="sideView.fxml" />
                        </Tab>
                    </TabPane>
                </AnchorPane>

                <!-- Right Panel: Details -->
                <VBox alignment="TOP_CENTER" prefWidth="340" style="-fx-background-color: #f5f5f5; -fx-padding: 10;" SplitPane.resizableWithParent="false">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <Label text="Runway Details" style="-fx-font-weight: bold; -fx-font-size: 16px;">
                        <VBox.margin>
                            <Insets bottom="10"/>
                        </VBox.margin>
                    </Label>

                    <TitledPane text="Original Values" expanded="true" collapsible="true">
                        <TableView fx:id="originalTableView" prefHeight="85" prefWidth="320">
                            <columns>
                                <TableColumn fx:id="nameCol" prefWidth="64" text="Runway" />
                                <TableColumn fx:id="asdaCol" prefWidth="64" text="ASDA" />
                                <TableColumn fx:id="toraCol" prefWidth="64" text="TORA" />
                                <TableColumn fx:id="todaCol" prefWidth="64" text="TODA" />
                                <TableColumn fx:id="ldaCol" prefWidth="64" text="LDA" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </TitledPane>

                    <TitledPane text="Current Values" expanded="true" collapsible="true">
                        <TableView fx:id="currentTableView" prefHeight="85" prefWidth="320">
                            <columns>
                                <TableColumn fx:id="currNameCol" prefWidth="64" text="Runway" />
                                <TableColumn fx:id="currAsdaCol" prefWidth="64" text="ASDA" />
                                <TableColumn fx:id="currToraCol" prefWidth="64" text="TORA" />
                                <TableColumn fx:id="currTodaCol" prefWidth="64" text="TODA" />
                                <TableColumn fx:id="currLdaCol" prefWidth="64" text="LDA" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </TitledPane>

                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <VBox.margin>
                            <Insets top="10" bottom="5"/>
                        </VBox.margin>
                        <Button fx:id="toggleTabPaneButton" text="Show Calculation Breakdown"
                                onAction="#toggleTabPaneVisibility" styleClass="info-button"/>
                    </HBox>

                    <VBox fx:id="tabPaneContainer" visible="false" managed="false" VBox.vgrow="ALWAYS">
                        <TabPane prefHeight="200" prefWidth="320">
                            <tabs>
                                <Tab text="ASDA" closable="false">
                                    <content>
                                        <TextArea fx:id="asdaTextArea" editable="false" wrapText="true"/>
                                    </content>
                                </Tab>
                                <Tab text="TORA" closable="false">
                                    <content>
                                        <TextArea fx:id="toraTextArea" editable="false" wrapText="true"/>
                                    </content>
                                </Tab>
                                <Tab text="TODA" closable="false">
                                    <content>
                                        <TextArea fx:id="todaTextArea" editable="false" wrapText="true"/>
                                    </content>
                                </Tab>
                                <Tab text="LDA" closable="false">
                                    <content>
                                        <TextArea fx:id="ldaTextArea" editable="false" wrapText="true"/>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </VBox>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>